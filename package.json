{
  "name": "cucumber-js-demo",
  "version": "1.0.0",
  "description": "Proyecto de ejemplo con Cucumber.js para pruebas de integraci√≥n y unitarias",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "cucumber-js --require-module @babel/register --require src/__tests__/features/step_definitions/**/*.js",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch"
  },
  "dependencies": {
    "@cucumber/cucumber": "^10.1.0",
    "@cucumber/pretty-formatter": "^1.0.0",
    "jest": "^29.7.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.2",
    "@babel/register": "^7.28.3",
    "jest-cucumber": "^4.1.1"
  }
}
